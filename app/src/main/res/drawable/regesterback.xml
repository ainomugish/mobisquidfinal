<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item 
         android:state_pressed="true"
         android:drawable="@drawable/checkable_selected_border" /> <!-- pressed -->
     <item >
        <shape>
            <solid
                android:color="#ff7f00" />
            <stroke
                android:width="0.5dp"
                android:color="#ffffff" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
   
