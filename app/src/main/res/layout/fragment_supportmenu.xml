<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mobisquid.mobicash.fragments.Supportmenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/five_dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten_dp">
                <com.mobisquid.mobicash.utils.SquareImageView
                    android:id="@+id/sup_image"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/support"/>
                <com.mobisquid.mobicash.utils.RectagularImageView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/sup_image"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_height="50dp"
                    android:src="@drawable/mobicash"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Choose platform"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/frequent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    app:contentPadding="3dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/five_dp">
                    <LinearLayout
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#222"
                                android:text="We recommend to visit first the frequently asked questions."
                                />

                            <ImageView
                                android:id="@+id/frq"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/frqasked"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    app:contentPadding="3dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/five_dp">
                    <LinearLayout
                        android:id="@+id/chat"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/five_dp">
                        <com.mobisquid.mobicash.utils.SquareImageView
                            android:id="@+id/chaticon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:transitionName="chat"
                            android:src="@drawable/ic_message_black_24dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/five_dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#222"
                                android:textStyle="bold"
                                android:text="Chat"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:layout_weight="1"
                                android:textColor="#666"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chat with one of our agents" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    app:contentPadding="3dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/five_dp">
                    <LinearLayout
                        android:id="@+id/call"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/five_dp">
                        <com.mobisquid.mobicash.utils.SquareImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_call_black_24dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/five_dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#222"
                                android:textStyle="bold"
                                android:text="Make a call"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:layout_weight="1"
                                android:textColor="#666"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Make a direct call or using the our build-in calls" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    app:contentPadding="3dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/five_dp">
                    <LinearLayout
                        android:id="@+id/video"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/five_dp">
                        <com.mobisquid.mobicash.utils.SquareImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_video_call_black_24dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/five_dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#222"
                                android:textStyle="bold"
                                android:text="Video call"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:layout_weight="1"
                                android:textColor="#666"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Have a video call with one of our agents" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
