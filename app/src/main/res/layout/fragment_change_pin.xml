<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".fragments.ChangePin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inp_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Old pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/editText_oldpin"
                android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inp_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:hint="New pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/editText_newpin"
                android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inp_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:hint="Re-try new pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/editText_retrynewpin"
                android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wrapper2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button"
                android:layout_marginRight="@dimen/five_dp"
                android:text="Cancel" />
            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_height="wrap_content"
                android:background="@drawable/regesterback"
                android:text="Change" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>