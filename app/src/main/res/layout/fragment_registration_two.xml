<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.Registration_two">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/touch_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp">
                    <EditText
                        android:id="@+id/enroll_dob_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of birth">
                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_box_new"
                    android:layout_marginRight="8dp">
                    <android.support.v7.widget.AppCompatSpinner
                        style="@style/mySpinnerItemStyle"
                        android:id="@+id/spidselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp">
                    <EditText
                        android:id="@+id/register_nationalaIID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:ems="10"
                        android:hint="ID number" >
                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp">
                    <EditText
                        android:id="@+id/expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID expiry date"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_box_new"
                    android:layout_marginRight="8dp">
                    <android.support.v7.widget.AppCompatSpinner
                        style="@style/mySpinnerItemStyle"
                        android:id="@+id/sp_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_imigration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp">

                    <EditText
                        android:id="@+id/register_imigration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Immigration visa No (*optional)"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp"
                    android:background="@drawable/text_box_new"
                    android:layout_marginRight="8dp">
                    <android.support.v7.widget.AppCompatSpinner
                        style="@style/mySpinnerItemStyle"
                        android:id="@+id/sp_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.5dp">

                    <EditText
                        android:id="@+id/register_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4.5dp"
                        android:hint="physical address"
                        android:lines="2"
                        android:inputType="textMultiLine|textCapSentences"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/done_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4.5dp"
        android:weightSum="1"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:clickable="true"
            android:background="@drawable/cancel_button"
            android:text="Cancel" />

        <Button
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#FFFFFF"
            android:layout_weight=".5"
            android:background="@drawable/regesterback"
            android:text="NEXT" />
    </LinearLayout>



</RelativeLayout>
