<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/ten_dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/e_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="etax"
                    android:layout_marginTop="5dp">

                    <com.mobisquid.mobicash.utils.SquareImageView
                        android:id="@+id/etax"
                        android:layout_width="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:src="@mipmap/ic_rra"/>
                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"

                        android:layout_toRightOf="@+id/etax"
                        android:layout_marginTop="5dp"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="RRA"
                            android:textAppearance="?android:attr/textAppearanceMedium" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay government tax through this services." />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp">

                <RelativeLayout
                    android:id="@+id/television"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="Rssb"
                    android:layout_marginTop="5dp">

                    <com.mobisquid.mobicash.utils.SquareImageView
                        android:id="@+id/rssb"
                        android:layout_width="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:src="@mipmap/ic_rssb"/>
                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"

                        android:layout_toRightOf="@+id/rssb"
                        android:layout_marginTop="5dp"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="RSSB"
                            android:textAppearance="?android:attr/textAppearanceMedium" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay your Community Based Health Care Insurance contribution" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp">
                <RelativeLayout
                    android:id="@+id/electricity_po"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="IRREMBO"
                    android:layout_marginTop="5dp">

                    <com.mobisquid.mobicash.utils.SquareImageView
                        android:id="@+id/irrembo"
                        android:layout_width="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:src="@mipmap/ic_gov"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/irrembo"
                        android:layout_marginTop="5dp"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Irembo"
                            android:textAppearance="?android:attr/textAppearanceMedium" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One stop portal for Rwanda e-Government services" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>






        </LinearLayout>

    </ScrollView>


</RelativeLayout>
