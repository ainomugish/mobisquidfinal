<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/wrapper_gr"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.mobisquid.mobicash.wedget.drawer.views.ChatLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:id="@+id/bubble"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_outgoing_normal">

        <ImageView
            android:id="@+id/right_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtMsg"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_single_tick"
            android:layout_alignParentEnd="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/time_text"
            style="@style/chat_timings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/txtMsg"
            android:paddingBottom="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toLeftOf="@id/right_delivery"
            android:layout_toStartOf="@id/right_delivery"
            android:text="17:10" />

        <github.ankushsachdeva.emojicon.EmojiconTextView
            android:id="@+id/txtMsg"
            android:autoLink="web"
            style="@style/chat_text_message_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/time_text"
            android:text="jd ddadk sdj  dadjn d dj  dadj"
             />

    </com.mobisquid.mobicash.wedget.drawer.views.ChatLayout>
</RelativeLayout>