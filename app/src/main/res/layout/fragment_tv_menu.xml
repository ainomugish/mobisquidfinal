<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/scrollView1"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:id="@+id/watchafricatv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"

                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:paddingBottom="3dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#222"
                                    android:textStyle="bold"
                                    android:text="Watch Tv"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:paddingTop="3dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="1"
                                    android:textColor="#666"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="You can watch TV with MobiSquid by subscribing to any chanel " />


                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:id="@+id/dstv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.mobisquid.mobicash.utils.RectagularImageView
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="left"
                                android:src="@drawable/dstv" />


                            <TextView
                                android:textColor="#666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pay a bouquet of your choice on DSTV and ensure that the smartcard number is correct." />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:id="@+id/canelpay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <com.mobisquid.mobicash.utils.RectagularImageView
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="left"
                                android:src="@drawable/canal" />

                            <TextView
                                android:textColor="#666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pay a bouquet of your choice on CANAL and ensure that the smartcard number is correct." />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <LinearLayout
                            android:id="@+id/startime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >

                            <com.mobisquid.mobicash.utils.RectagularImageView
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_gravity="left"
                                android:src="@drawable/startimes" />

                            <TextView
                                android:textColor="#666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Top up your bouquet by proving a smartcard number" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.CardView>
                </LinearLayout>

        </RelativeLayout>

</android.support.v4.widget.NestedScrollView>