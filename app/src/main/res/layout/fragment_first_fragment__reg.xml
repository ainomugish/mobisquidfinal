<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mobisquid.mobicash.fragments.FirstFragment_Reg">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView1"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical" >
                    <android.support.v7.widget.CardView
                        android:id="@+id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:contentPadding="@dimen/five_dp"
                        app:cardCornerRadius="@dimen/five_dp"
                        android:layout_gravity="center">

                        <com.mobisquid.mobicash.utils.SquareImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"
                            android:clickable="true"
                            android:id="@+id/register_facePic"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:padding="10dp" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4.5dp"
                            android:orientation="horizontal"
                            android:weightSum="1" >
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inp_fn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_firstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="First name"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    />
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inp_sn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_secondname"
                                    android:layout_width="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_height="wrap_content"
                                    android:hint="Second Name"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"

                                    />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4.5dp"
                            android:orientation="horizontal"
                            android:weightSum="1" >
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inp_username"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Username"
                                    android:inputType="text"
                                    android:maxLines="1"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Your Mobile"
                                    android:inputType="number" >
                                </EditText>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4.5dp"
                            android:orientation="horizontal"
                            android:weightSum="1" >
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inp_password"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="password"
                                    android:inputType="textPassword"
                                    android:maxLines="1"

                                    />
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/inp_confpass"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4.5dp"
                                android:layout_weight=".5"
                                >
                                <EditText
                                    android:id="@+id/register_confirm_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Confirm password"
                                    android:inputType="textPassword" >
                                </EditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4.5dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/t_c"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/terms"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold|italic"
                            android:layout_gravity="center"
                            android:text="@string/accept_terms"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/payment"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/ten_dp"
                        android:paddingLeft="@dimen/ten_dp"
                        android:paddingRight="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:paddingStart="@dimen/ten_dp">
                        <Button
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/cancel_button"
                            android:text="Cancel" />

                        <Button
                            android:id="@+id/register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/regesterback"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:text="Register" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
